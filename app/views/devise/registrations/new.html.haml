.devise_top
  .devise_img
    = image_tag 'login_top.jpg'
  .devise_top_fixed
    = render 'common/topwhite'
.container.devise_container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :Account, class: "devise_title"
      %br/
      = f.text_field :name, autofocus: true, class: "devise_text"
    .field
      = f.label :Email, class: "devise_title"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "devise_text"
    .field
      = f.label :Password, class: "devise_title"
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "devise_text"
    .devise_details
      = link_to "Log in", new_session_path(resource_name)
    .actions
      = f.submit "CREATE ACCOUNT", class: 'devise_btn'
