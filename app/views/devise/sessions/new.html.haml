.devise_top
  .devise_img
    = image_tag 'login_top.jpg'
  .devise_top_fixed
    = render 'common/topwhite'
.container.devise_container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class: "devise_title"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "devise_text"
    .field
      = f.label :password, class: "devise_title"
      %br/
      = f.password_field :password, autocomplete: "current-password", class: "devise_text"
    .devise_details
      .detail1
        = link_to "Sign up", new_registration_path(resource_name)
      .detail2
        = link_to "Forgot your password?", new_password_path(resource_name)
    .actions
      = f.submit "LOGIN", class: 'devise_btn'
  
